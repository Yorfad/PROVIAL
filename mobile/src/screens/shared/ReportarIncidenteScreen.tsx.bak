import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  TextInput,
  TouchableOpacity,
  StyleSheet,
  ScrollView,
  Alert,
  ActivityIndicator,
  Switch,
} from 'react-native';
import * as Location from 'expo-location';
import { incidentesAPI } from '../services/api';

interface TipoHecho {
  id: number;
  nombre: string;
}

interface Ruta {
  id: number;
  codigo: string;
}

export default function ReportarIncidenteScreen({ navigation }: any) {
  // Ubicaci√≥n GPS
  const [location, setLocation] = useState<Location.LocationObject | null>(null);
  const [loadingLocation, setLoadingLocation] = useState(true);

  // Datos del formulario
  const [tipoHechoId, setTipoHechoId] = useState<number>(1);
  const [rutaId, setRutaId] = useState<number>(1);
  const [km, setKm] = useState('');
  const [sentido, setSentido] = useState('NORTE');
  const [referencia, setReferencia] = useState('');
  const [observaciones, setObservaciones] = useState('');

  // Heridos y fallecidos
  const [hayHeridos, setHayHeridos] = useState(false);
  const [cantidadHeridos, setCantidadHeridos] = useState('0');
  const [hayFallecidos, setHayFallecidos] = useState(false);
  const [cantidadFallecidos, setCantidadFallecidos] = useState('0');

  // Recursos requeridos
  const [requiereBomberos, setRequiereBomberos] = useState(false);
  const [requierePNC, setRequierePNC] = useState(false);
  const [requiereAmbulancia, setRequiereAmbulancia] = useState(false);

  const [submitting, setSubmitting] = useState(false);

  // Datos hardcoded para demo (en producci√≥n vendr√≠an del API)
  const tiposHecho: TipoHecho[] = [
    { id: 1, nombre: 'Accidente de Tr√°nsito' },
    { id: 2, nombre: 'Obstrucci√≥n de V√≠a' },
    { id: 3, nombre: 'Veh√≠culo Varado' },
    { id: 4, nombre: 'Derrumbe' },
    { id: 5, nombre: 'Incendio' },
  ];

  const rutas: Ruta[] = [
    { id: 1, codigo: 'CA-1' },
    { id: 2, codigo: 'CA-2' },
    { id: 3, codigo: 'CA-9' },
    { id: 4, codigo: 'RN-14' },
  ];

  const sentidos = ['NORTE', 'SUR', 'ESTE', 'OESTE'];

  useEffect(() => {
    obtenerUbicacion();
  }, []);

  const obtenerUbicacion = async () => {
    try {
      // Solicitar permisos
      const { status } = await Location.requestForegroundPermissionsAsync();
      if (status !== 'granted') {
        Alert.alert(
          'Permisos Requeridos',
          'Se necesita acceso a la ubicaci√≥n para reportar incidentes.'
        );
        navigation.goBack();
        return;
      }

      // Obtener ubicaci√≥n actual
      const loc = await Location.getCurrentPositionAsync({
        accuracy: Location.Accuracy.Balanced,
      });
      setLocation(loc);
    } catch (error) {
      console.error('Error obteniendo ubicaci√≥n:', error);
      Alert.alert('Error', 'No se pudo obtener la ubicaci√≥n GPS.');
    } finally {
      setLoadingLocation(false);
    }
  };

  const handleSubmit = async () => {
    // Validaciones
    if (!location) {
      Alert.alert('Error', 'Esperando ubicaci√≥n GPS...');
      return;
    }

    if (!km || parseFloat(km) <= 0) {
      Alert.alert('Error', 'Por favor ingresa el kil√≥metro.');
      return;
    }

    if (!observaciones.trim()) {
      Alert.alert('Error', 'Por favor describe el incidente.');
      return;
    }

    setSubmitting(true);
    try {
      const incidenteData = {
        tipo_hecho_id: tipoHechoId,
        ruta_id: rutaId,
        km: parseFloat(km),
        sentido,
        referencia_ubicacion: referencia || undefined,
        latitud: location.coords.latitude,
        longitud: location.coords.longitude,
        hay_heridos: hayHeridos,
        cantidad_heridos: parseInt(cantidadHeridos) || 0,
        hay_fallecidos: hayFallecidos,
        cantidad_fallecidos: parseInt(cantidadFallecidos) || 0,
        requiere_bomberos: requiereBomberos,
        requiere_pnc: requierePNC,
        requiere_ambulancia: requiereAmbulancia,
        observaciones_iniciales: observaciones,
      };

      await incidentesAPI.create(incidenteData);

      Alert.alert(
        '‚úÖ Incidente Reportado',
        'El incidente ha sido enviado al Centro de Operaciones.',
        [
          {
            text: 'OK',
            onPress: () => navigation.goBack(),
          },
        ]
      );
    } catch (error: any) {
      console.error('Error reportando incidente:', error);
      Alert.alert(
        'Error',
        error.response?.data?.error || 'No se pudo enviar el reporte. Intenta nuevamente.'
      );
    } finally {
      setSubmitting(false);
    }
  };

  if (loadingLocation) {
    return (
      <View style={styles.loadingContainer}>
        <ActivityIndicator size="large" color="#1e40af" />
        <Text style={styles.loadingText}>Obteniendo ubicaci√≥n GPS...</Text>
      </View>
    );
  }

  return (
    <ScrollView style={styles.container}>
      {/* GPS Info Card */}
      <View style={styles.gpsCard}>
        <Text style={styles.gpsTitle}>üìç Ubicaci√≥n GPS Capturada</Text>
        {location && (
          <>
            <Text style={styles.gpsText}>
              Lat: {location.coords.latitude.toFixed(6)}
            </Text>
            <Text style={styles.gpsText}>
              Lon: {location.coords.longitude.toFixed(6)}
            </Text>
            <Text style={styles.gpsSubtext}>
              Precisi√≥n: ¬±{location.coords.accuracy?.toFixed(0)}m
            </Text>
          </>
        )}
      </View>

      {/* Formulario */}
      <View style={styles.form}>
        {/* Tipo de Incidente */}
        <Text style={styles.label}>Tipo de Incidente *</Text>
        <View style={styles.buttonGroup}>
          {tiposHecho.map((tipo) => (
            <TouchableOpacity
              key={tipo.id}
              style={[
                styles.optionButton,
                tipoHechoId === tipo.id && styles.optionButtonActive,
              ]}
              onPress={() => setTipoHechoId(tipo.id)}
            >
              <Text
                style={[
                  styles.optionButtonText,
                  tipoHechoId === tipo.id && styles.optionButtonTextActive,
                ]}
              >
                {tipo.nombre}
              </Text>
            </TouchableOpacity>
          ))}
        </View>

        {/* Ruta */}
        <Text style={styles.label}>Ruta *</Text>
        <View style={styles.buttonGroup}>
          {rutas.map((ruta) => (
            <TouchableOpacity
              key={ruta.id}
              style={[
                styles.optionButtonSmall,
                rutaId === ruta.id && styles.optionButtonActive,
              ]}
              onPress={() => setRutaId(ruta.id)}
            >
              <Text
                style={[
                  styles.optionButtonText,
                  rutaId === ruta.id && styles.optionButtonTextActive,
                ]}
              >
                {ruta.codigo}
              </Text>
            </TouchableOpacity>
          ))}
        </View>

        {/* Kil√≥metro y Sentido */}
        <View style={styles.row}>
          <View style={styles.halfWidth}>
            <Text style={styles.label}>Kil√≥metro *</Text>
            <TextInput
              style={styles.input}
              placeholder="28.5"
              value={km}
              onChangeText={setKm}
              keyboardType="decimal-pad"
            />
          </View>
          <View style={styles.halfWidth}>
            <Text style={styles.label}>Sentido</Text>
            <View style={styles.buttonGroup}>
              {sentidos.map((s) => (
                <TouchableOpacity
                  key={s}
                  style={[
                    styles.optionButtonTiny,
                    sentido === s && styles.optionButtonActive,
                  ]}
                  onPress={() => setSentido(s)}
                >
                  <Text
                    style={[
                      styles.optionButtonTextSmall,
                      sentido === s && styles.optionButtonTextActive,
                    ]}
                  >
                    {s}
                  </Text>
                </TouchableOpacity>
              ))}
            </View>
          </View>
        </View>

        {/* Referencia */}
        <Text style={styles.label}>Referencia de Ubicaci√≥n</Text>
        <TextInput
          style={styles.input}
          placeholder="Ej: Frente a gasolinera Shell"
          value={referencia}
          onChangeText={setReferencia}
        />

        {/* Observaciones */}
        <Text style={styles.label}>Descripci√≥n del Incidente *</Text>
        <TextInput
          style={[styles.input, styles.textArea]}
          placeholder="Describe qu√© ocurri√≥..."
          value={observaciones}
          onChangeText={setObservaciones}
          multiline
          numberOfLines={4}
        />

        {/* Heridos */}
        <View style={styles.toggleRow}>
          <Text style={styles.toggleLabel}>¬øHay heridos?</Text>
          <Switch
            value={hayHeridos}
            onValueChange={setHayHeridos}
            trackColor={{ false: '#d1d5db', true: '#3b82f6' }}
            thumbColor={hayHeridos ? '#1e40af' : '#f3f4f6'}
          />
        </View>
        {hayHeridos && (
          <TextInput
            style={styles.input}
            placeholder="Cantidad de heridos"
            value={cantidadHeridos}
            onChangeText={setCantidadHeridos}
            keyboardType="number-pad"
          />
        )}

        {/* Fallecidos */}
        <View style={styles.toggleRow}>
          <Text style={styles.toggleLabel}>¬øHay fallecidos?</Text>
          <Switch
            value={hayFallecidos}
            onValueChange={setHayFallecidos}
            trackColor={{ false: '#d1d5db', true: '#ef4444' }}
            thumbColor={hayFallecidos ? '#dc2626' : '#f3f4f6'}
          />
        </View>
        {hayFallecidos && (
          <TextInput
            style={styles.input}
            placeholder="Cantidad de fallecidos"
            value={cantidadFallecidos}
            onChangeText={setCantidadFallecidos}
            keyboardType="number-pad"
          />
        )}

        {/* Recursos Requeridos */}
        <Text style={styles.sectionTitle}>Recursos Requeridos</Text>
        <View style={styles.checkboxRow}>
          <TouchableOpacity
            style={styles.checkbox}
            onPress={() => setRequiereBomberos(!requiereBomberos)}
          >
            <View
              style={[
                styles.checkboxBox,
                requiereBomberos && styles.checkboxBoxChecked,
              ]}
            >
              {requiereBomberos && <Text style={styles.checkmark}>‚úì</Text>}
            </View>
            <Text style={styles.checkboxLabel}>Bomberos</Text>
          </TouchableOpacity>
        </View>

        <View style={styles.checkboxRow}>
          <TouchableOpacity
            style={styles.checkbox}
            onPress={() => setRequierePNC(!requierePNC)}
          >
            <View
              style={[styles.checkboxBox, requierePNC && styles.checkboxBoxChecked]}
            >
              {requierePNC && <Text style={styles.checkmark}>‚úì</Text>}
            </View>
            <Text style={styles.checkboxLabel}>PNC (Polic√≠a)</Text>
          </TouchableOpacity>
        </View>

        <View style={styles.checkboxRow}>
          <TouchableOpacity
            style={styles.checkbox}
            onPress={() => setRequiereAmbulancia(!requiereAmbulancia)}
          >
            <View
              style={[
                styles.checkboxBox,
                requiereAmbulancia && styles.checkboxBoxChecked,
              ]}
            >
              {requiereAmbulancia && <Text style={styles.checkmark}>‚úì</Text>}
            </View>
            <Text style={styles.checkboxLabel}>Ambulancia</Text>
          </TouchableOpacity>
        </View>

        {/* Bot√≥n Enviar */}
        <TouchableOpacity
          style={[styles.submitButton, submitting && styles.submitButtonDisabled]}
          onPress={handleSubmit}
          disabled={submitting}
        >
          {submitting ? (
            <ActivityIndicator color="#fff" />
          ) : (
            <>
              <Text style={styles.submitButtonText}>üì§ ENVIAR REPORTE</Text>
              <Text style={styles.submitButtonSubtext}>
                Se enviar√° al Centro de Operaciones
              </Text>
            </>
          )}
        </TouchableOpacity>

        <View style={{ height: 40 }} />
      </View>
    </ScrollView>
  );
}

