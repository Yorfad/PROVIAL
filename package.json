{
  "name": "provial-sistema-integral",
  "version": "1.0.0",
  "description": "Sistema integral de gestión de incidentes viales",
  "private": true,
  "workspaces": [
    "backend",
    "web",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:backend && npm run build:web",
    "build:backend": "cd backend && npm run build",
    "build:web": "cd web && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && npm test",
    "test:web": "cd web && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate": "cd migrations && ./run_migrations.sh",
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd web && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "metro": "^0.83.2",
    "metro-transform-worker": "^0.83.2",
    "typescript": "^5.9.2",
    "xlsx": "^0.18.5"
  },
  "dependencies": {
    "@turf/turf": "^7.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "provial",
    "incidentes",
    "carreteras",
    "monorepo"
  ],
  "author": "Tu organización",
  "license": "UNLICENSED"
}
