# Server
NODE_ENV=development
PORT=3001
API_PREFIX=/api

# Database
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5433/provial_db
DB_HOST=127.0.0.1
DB_PORT=5433
DB_NAME=provial_db
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=12h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5174,http://localhost:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:5174,http://localhost:8081

# File Upload (futuro)
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads
